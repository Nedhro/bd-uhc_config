<?xml version="1.0"?>
<data inherit_id="report.external_layout_footer">
    <xpath expr="//div[@class='footer']" position="replace">
        <div class="footer">
            <t t-if="o._table=='account_invoice'">
                <div class="last-page">
                    <div class="row" style="padding-bottom: 4px">
                        <div style="width: 14%; display: inline-block; border: 1px solid black; text-align: center">
                            <span>Admission</span> <br/>
                            <span>111</span>
                        </div>
                        <div style="width:4%; display: inline-block;">
                        </div>
                        <div style="width: 14%; display: inline-block; border: 1px solid black; text-align: center">
                            <span>ECG</span> <br/>
                            <span>111</span>
                        </div>
                        <div style="width:4%; display: inline-block;">
                        </div>
                        <div style="width: 14%; display: inline-block; border: 1px solid black; text-align: center">
                            <span>Pathology</span> <br/>
                            <span>112</span>
                        </div>
                        <div style="width:4%; display: inline-block;">
                        </div>
                        <div style="width: 14%; display: inline-block; border: 1px solid black; text-align: center">
                            <span>X-ray</span> <br/>
                            <span>113</span>
                        </div>
                        <div style="width:4%; display: inline-block;">
                        </div>
                        <div style="width: 14%; display: inline-block; border: 1px solid black; text-align: center">
                            <span>USG</span> <br/>
                            <span>114</span>
                        </div>
                    </div>
                    <div class="text-center" style="border-top: 1px solid black;">
                        <t t-if="company.custom_footer">
                            <span style="font-size: 12px" t-raw="company.rml_footer"/>
                        </t>
                        <ul class="list-inline">
                            <li>Page:</li>
                            <li>
                                <span class="page"/>
                            </li>
                            <li>/</li>
                            <li>
                                <span class="topage"/>
                            </li>
                        </ul>
                    </div>
                </div>
            </t>
            <t t-else="">
                <div class="text-center" style="border-top: 1px solid black;">
                    <t t-if="company.custom_footer">
                        <span style="font-size: 12px" t-raw="company.rml_footer"/>
                    </t>
                    <ul class="list-inline">
                        <li>Page:</li>
                        <li>
                            <span class="page"/>
                        </li>
                        <li>/</li>
                        <li>
                            <span class="topage"/>
                        </li>
                    </ul>
                </div>
            </t>
        </div>
    </xpath>
</data>