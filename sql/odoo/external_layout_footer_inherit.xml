<?xml version="1.0"?>
<data inherit_id="report.external_layout_footer">
    <xpath expr="//div[@class='footer']" position="replace">
        <div class="footer">
            <t t-if="o._table=='account_invoice'">
                <div class="last-page">
                    <div class="row" style="padding-bottom: 4px">
                        <div class="col-xs-2" style="border: 1px solid black; text-align: center">
                            <span>OPD</span> <br/>
                            <span>101</span>
                        </div>
                        <div class="col-xs-1">
                        </div>
                        <div class="col-xs-2" style="border: 1px solid black; text-align: center">
                            <span>OPD</span> <br/>
                            <span>101</span>
                        </div>
                        <div class="col-xs-1">
                        </div>
                        <div class="col-xs-2" style="border: 1px solid black; text-align: center">
                            <span>OPD</span> <br/>
                            <span>101</span>
                        </div>
                        <div class="col-xs-1">
                        </div>
                        <div class="col-xs-2" style="border: 1px solid black; text-align: center">
                            <span>OPD</span> <br/>
                            <span>101</span>
                        </div>
                        <div class="col-xs-1">
                        </div>
                    </div>
                    <div class="text-center" style="border-top: 1px solid black;">
                        <t t-if="company.custom_footer">
                            <span style="font-size: 12px" t-raw="company.rml_footer"/>
                        </t>
                        <ul class="list-inline">
                            <li>Page:</li>
                            <li>
                                <span class="page"/>
                            </li>
                            <li>/</li>
                            <li>
                                <span class="topage"/>
                            </li>
                        </ul>
                    </div>
                </div>
            </t>
            <t t-else="">
                <div class="text-center" style="border-top: 1px solid black;">
                    <t t-if="company.custom_footer">
                        <span style="font-size: 12px" t-raw="company.rml_footer"/>
                    </t>
                    <ul class="list-inline">
                        <li>Page:</li>
                        <li>
                            <span class="page"/>
                        </li>
                        <li>/</li>
                        <li>
                            <span class="topage"/>
                        </li>
                    </ul>
                </div>
            </t>
        </div>
    </xpath>
</data>