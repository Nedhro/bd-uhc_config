{
  "id": "bahmni.registration",
  "instanceOf": "bahmni.template.registration",
  "description": "Bahmni Patient Registration App",
  "extensionPoints": [
    {
      "id": "org.bahmni.registration.patient.search.result.action",
      "description": "Bahmni Patient Search Result Action"
    },
    {
      "id": "org.bahmni.registration.patient.edit.action",
      "description": "Bahmni Patient Edit Page Action"
    },
    {
      "id": "org.bahmni.registration.patient.create.action",
      "description": "Bahmni Patient Create Page Action"
    }
  ],
  "contextModel": [
    "patientUuid",
    "activeVisitUuid"
  ],
  "config": {
    "forwardUrlsForVisitTypes": [
      {
        "visitType": "emergency",
        "forwardUrl": "../registration/index.html#/patient/new",
        "translationKey": "Enter Visit page details",
        "shortcutKey": "c"
      },
      {
        "visitType": "outpatient",
        "forwardUrl": "../registration/index.html#/patient/new",
        "translationKey": "Enter Visit page details",
        "shortcutKey": "c"
      },
      {
        "visitType": "inpatient",
        "forwardUrl": "../registration/index.html#/patient/new",
        "translationKey": "Enter Visit page details",
        "shortcutKey": "c"
      }
    ],
    "mandatoryPersonAttributes": [
      "phoneNumber",
      "referredByHospital",
      "referredByDoctor",
      "alarmingField",
      "referredBy",
      "patientCategory"
    ],
    "autoCompleteFields": [
      "familyName",
      "relativeRelation",
      "referredByHospital",
      "referredByDoctor"
    ],
    "patientInformation": {
      "emergencyContact": {
        "title": "Emergency Contact",
        "translationKey": "REGISTRATION_EMERGENCY_CONTACT_KEY",
        "attributes": [
          "relativeName",
          "relativeContactNumber",
          "relativeRelation"
        ]
      },
      "hospitalSection": {
        "title": "Referred By Hospital",
        "translationKey": "REGISTRATION_REFERRED_BY_HOSPITAL_KEY",
        "attributes": [
          "referredByHospital"
        ]
      },
      "doctorSection": {
        "title": "Referred By Doctor",
        "translationKey": "REGISTRATION_REFERRED_BY_DOCTOR_KEY",
        "attributes": [
          "referredByDoctor"
        ]
      },
      "hidden": {
        "attributes": [
          "healthId"
        ]
      },
      "defaults": {
        "alarmingField": "General",
        "patientCategory": "General",
        "referredBy": "Self"
      }
    },
    "prepopulateFields": [
      "Division",
      "Zilla",
      "Upazilla"
    ],
    "searchByIdForwardUrl": "/patient/{{patientUuid}}",
    "showLastName": true,
    "showMiddleName": true,
    "isLastNameMandatory": false,
    "addressHierarchy": {
      "showAddressFieldsTopDown": true,
      "strictAutocompleteFromLevel": "address2"
    },
    "printOptions": [
      {
        "translationKey": "REGISTRATION_PRINT_REG_CARD_LOCAL_KEY",
        "templateUrl": "/bahmni_config/openmrs/apps/registration/registrationCardLayout/print.html",
        "shortcutKey": "l"
      },
      {
        "translationKey": "REGISTRATION_PRINT_HEALTHID_CARD_KEY",
        "templateUrl": "/bahmni_config/openmrs/apps/registration/healthIDCardLayout/print.html",
        "shortcutKey": "p"
      }
    ],
    "conceptSetUI": {
      "Fee Category": {
        "required": true
      },
      "defaults": {
        "Fee Category": "Fee Category, General"
      }
    },
    "fieldValidation": {
      "givenName": {
        "pattern": "^[a-zA-Z \\-\\.]{1,50}$",
        "errorMessage": "Given name should only have alphabets, '-', '.' and spaces. Max length is 50"
      },
      "familyName": {
        "pattern": "^([A-Za-z]{1,25})$",
        "errorMessage": "Family name should only have alphabets, not even space. Max length is 25"
      },
      "nationalId": {
        "pattern": "^(\\d{10}|\\d{13}|\\d{17})$",
        "errorMessage": "National ID should be 10 or 13 or 17 digits"
      },
      "birthRegistrationId": {
        "pattern": "^\\d{17}$",
        "errorMessage": "Birth Registration Number should be 17 digits"
      },
      "phoneNumber": {
        "pattern": "^(\\d{3,14})$",
        "errorMessage": "Phone Number should be between 3 to 14 digits"
      },
      "relativeContactNumber": {
        "pattern": "^(\\d{3,14})$",
        "errorMessage": "Relative Number should be between 3 to 14 digits"
      },
      "healthId": {
        "pattern": "^[9][1-9][0-9]{9}$",
        "errorMessage": "Please enter a valid HID"
      },
      "address1": {
        "pattern": "^(\\s*[^\\s]\\s*){3,255}$",
        "errorMessage": "Should have minimum 3 characters"
      },
      "householdCode": {
        "pattern": "^\\d{1,50}$",
        "errorMessage": "Should contain only digits, not even space. Max length is 50"
      },
      "fatherName": {
        "pattern": "(^([a-zA-Z\\.\\s]{1,100}) ([a-zA-Z]{0,25})$)|(^([a-zA-Z\\.]{1,100})$)",
        "errorMessage": "Should contain only alphabets, dots and spaces"
      },
      "motherName": {
        "pattern": "(^([a-zA-Z\\.\\s]{1,100}) ([a-zA-Z]{0,25})$)|(^([a-zA-Z\\.]{1,100})$)",
        "errorMessage": "Should contain only alphabets, dots and spaces"
      },
      "spouseName": {
        "pattern": "(^([a-zA-Z\\.\\s]{1,100}) ([a-zA-Z]{0,25})$)|(^([a-zA-Z\\.]{1,100})$)",
        "errorMessage": "Should contain only alphabets, dots and spaces"
      }
    },
    "patientSearch": {
      "address": {
        "label": "Ward/Union",
        "placeholder": "Enter Ward/Union",
        "field": "address3"
      },
      "customAttributes": {
        "label": "ID/Phone/Father/Spouse",
        "placeholder": "NID/Phone/Father/Spouse",
        "fields": [
          "nationalId",
          "phoneNumber",
          "fatherName",
          "spouseName"
        ]
      }
    }
  }
}

